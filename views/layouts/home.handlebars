<html>
  <head>
    <!--Title-->
    <title>Brightwheel Email Service</title>

    <!-- Styles -->
    <link rel="stylesheet" href="/styles/application.css">

    <!--Google Fonts-->
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600,700,800,900' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700,900" rel="stylesheet">
  </head>

  <body>
      <div class="heading-container">
          <form class="form-container", id="send-email">
              <div class="form-input">
                  <h3></h3>
              </div>
              <div class="form-input">
                  <h3>Recipient Email</h3>
                  <input type="text" id="recipient-email" placeholder="ENTER VALID EMAIL">
              </div>
              <div class="form-input">
                  <h3>Recipient Name</h3>
                  <input type="text" id="recipient-name" placeholder="ENTER NAME">
              </div>
              <div class="form-input">
                  <h3>Sender Email</h3>
                  <input type="text" id="sender-email" placeholder="ENTER VALID EMAIL">
              </div>
              <div class="form-input">
                  <h3>Sender Name</h3>
                  <input type="text" id="sender-name" placeholder="ENTER VALID NAME">
              </div>
              <div class="form-input">
                  <h3>Subject Line</h3>
                  <input type="text" id="subject" placeholder="SUBJECT LINE">
              </div>
              <div class="form-input">
                  <h3>Email Body</h3>
                  <input type="text" id="email-body" placeholder="ENTER EMAIL BODY">
              </div>
          </form>
      </div>
     </body>
  </body>

</html>
